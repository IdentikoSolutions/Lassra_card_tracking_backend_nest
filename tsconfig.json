{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@app/common": [
        "libs/common/src/"
      ]
    }
  }
}